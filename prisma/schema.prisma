generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model todo {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId 
  title       String 
  description String?
  status      Boolean @default(false)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Prisma clienti prisma-client-js genertor ile oluşturdum. Bu client sayesinde veritabını işlemlerini kod içinde tip güvenli şekilde çağırıyorum.

//	  	@map("_id") → MongoDB’nin _id alanına eşler.
//  		@db.ObjectId → MongoDB ObjectId tipini kullanır.
//  		createdAt/updatedAt → kayıt tarihi ve güncelleme tarihi otomatik tutulur.
